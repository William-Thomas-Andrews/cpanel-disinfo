# Enable URL Rewriting
RewriteEngine On
RewriteBase /

# Remove index.html from URLs
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*)index\.html$ /$1 [R=301,L,NC]

# Remove .html extension from URLs
RewriteCond %{THE_REQUEST} ^GET\ /[^?\s]+\.html [NC]
RewriteRule ^(.+)\.html$ /$1 [R=301,L,NE]

# Add .html extension internally (so the server can find the files)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Force trailing slash for directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ $1/ [R=301,L]

# Custom error pages (optional)
ErrorDocument 404 /404.html

# Security: Prevent directory browsing
Options -Indexes

# Security: Protect .htaccess and other sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
